<!-- Mods will only ever be created by a logged in user, who is automatically assigned as creator -->
<div class="ml-5 mt-5">
    <h1>Create a New Mod:</h1>
    <%= bootstrap_form_with(model: @mod, local: true, url: user_mods_path) do |f| %>
        <%= render partial: 'form', locals: {f: f} %>
    <% end %>
</div>