<div class="row">
    <div class="col-2 ml-5 mt-5 border-right">
        <h1>Login:</h1>
        <%= bootstrap_form_with model: @user do |f| %>
            <div class="row"><%= f.text_field :username %></div>
            <div class="row"><%= f.password_field :password %></div>
            <div class="row"><%= f.submit %></div>
        <%end%>
    </div>
    <div class="col-2 ml-5 mt-5">
        <h1>Or Login with Github:</h1>
        <br>
        <a class="btn btn-secondary" href="/auth/github" role="button">Login with Github</a>
    </div>
</div>